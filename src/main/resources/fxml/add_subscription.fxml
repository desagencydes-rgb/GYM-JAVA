<?xml version="1.0" encoding="UTF-8"?>

<!--
  Subscription Assignment Form
  - Assigns a plan to a member.
  - Features dynamic fields (Custom price/date enabled only if "Custom" plan selected).
-->

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="500.0" prefWidth="400.0" spacing="15.0" style="-fx-background-color: #1e1e1e;" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gym.app.controller.AddSubscriptionController">
   <padding>
      <Insets bottom="30.0" left="40.0" right="40.0" top="30.0" />
   </padding>
   <children>
      <Label text="New Subscription" textFill="WHITE">
         <font>
            <Font name="System Bold" size="20.0" />
         </font>
      </Label>
      
      <Label text="Select Member" textFill="WHITE" />
      <ComboBox fx:id="memberComboBox" prefWidth="300.0" promptText="Choose member..." />
      
      <Label text="Select Plan" textFill="WHITE" />
      <ComboBox fx:id="planComboBox" prefWidth="300.0" promptText="Choose plan..." />
      
      <Label text="Custom Plan Name" textFill="WHITE" />
      <TextField fx:id="customPlanNameField" promptText="Enter name (if Custom)" disable="true" />
      
      <Label text="Start Date" textFill="WHITE" />
      <DatePicker fx:id="startDatePicker" prefWidth="300.0" />
      
      <Label text="End Date (Auto / Custom)" textFill="WHITE" />
      <DatePicker fx:id="endDatePicker" prefWidth="300.0" />
      
      <Label text="Price (MAD)" textFill="WHITE" />
      <TextField fx:id="priceField" editable="false" />
      
      <Button mnemonicParsing="false" onAction="#handleSave" prefWidth="Infinity" text="Assign Subscription">
         <VBox.margin>
            <Insets top="20.0" />
         </VBox.margin>
      </Button>
      <Button mnemonicParsing="false" onAction="#handleCancel" prefWidth="Infinity" style="-fx-background-color: #555;" text="Cancel" />
   </children>
</VBox>
