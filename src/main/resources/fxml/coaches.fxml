<?xml version="1.0" encoding="UTF-8"?>

<!--
  Coaches View
  - Split Layout:
    - Left Column: List of Coaches.
    - Right Column: Weekly Schedule for the currently selected Coach.
-->

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="700.0" prefWidth="900.0" spacing="20.0" style="-fx-background-color: #121212;" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gym.app.controller.CoachesController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <children>
      <!-- HEADER -->
      <HBox alignment="CENTER_LEFT" spacing="20.0">
         <children>
            <Label text="Coaches &amp; Planning" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="28.0" />
               </font>
            </Label>
            <Region HBox.hgrow="ALWAYS" />
            <Button mnemonicParsing="false" onAction="#handleAddCoach" style="-fx-background-color: #29b6f6; -fx-text-fill: white; -fx-font-weight: bold;" text="+ Add Coach" />
         </children>
      </HBox>
      
      <!-- MAIN CONTENT SPLIT -->
      <HBox spacing="20.0" VBox.vgrow="ALWAYS">
         <children>
            
            <!-- LEFT: Coaches List -->
            <VBox prefWidth="300.0" spacing="10.0">
               <children>
                  <Label text="Coach List" textFill="WHITE" />
                  <ListView fx:id="coachesList" VBox.vgrow="ALWAYS" />
               </children>
            </VBox>
            
            <!-- RIGHT: Schedule View -->
            <VBox spacing="10.0" HBox.hgrow="ALWAYS">
               <children>
                  <Label text="Availability &amp; Planning" textFill="WHITE" />
                  <!-- ScrollPane for variable number of schedule items -->
                  <ScrollPane fitToWidth="true" style="-fx-background: transparent; -fx-background-color: transparent;" VBox.vgrow="ALWAYS">
                     <content>
                        <VBox fx:id="scheduleContainer" spacing="15.0" style="-fx-background-color: transparent;">
                           <padding>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </padding>
                        </VBox>
                     </content>
                  </ScrollPane>
               </children>
            </VBox>
            
         </children>
      </HBox>
   </children>
</VBox>
