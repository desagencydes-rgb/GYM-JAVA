<?xml version="1.0" encoding="UTF-8"?>

<!--
  Schedule Session Form
  - Dialog to add a new class to a coach's schedule.
  - Fields: Day (Dropdown), Start/End Time, Title.
-->

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="15.0" style="-fx-background-color: #1e1e1e; -fx-border-color: #333; -fx-border-width: 1;" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gym.app.controller.ScheduleFormController">
   <padding>
      <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
   </padding>
   <children>
      <Label text="Plan Session" textFill="WHITE">
         <font>
            <Font name="System Bold" size="20.0" />
         </font>
      </Label>
      <ComboBox fx:id="dayBox" prefWidth="250.0" promptText="Select Day" />
      <TextField fx:id="startTimeField" promptText="Start Time (e.g. 09:00)" />
      <TextField fx:id="endTimeField" promptText="End Time (e.g. 10:30)" />
      <TextField fx:id="titleField" promptText="Class Title (e.g. Morning Yoga)" />
      <Button mnemonicParsing="false" onAction="#handleSave" prefWidth="200.0" style="-fx-background-color: #00e676; -fx-text-fill: black; -fx-font-weight: bold;" text="Add Session" />
   </children>
</VBox>
