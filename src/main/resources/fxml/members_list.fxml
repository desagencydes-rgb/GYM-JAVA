<?xml version="1.0" encoding="UTF-8"?>

<!--
  Members List View
  - Top Bar: Title ("People") and Actions ("Assign Plan", "+ Add Member").
  - Center: ListView displaying Member Cards.
-->

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="700.0" prefWidth="900.0" spacing="20.0" style="-fx-background-color: #121212;" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gym.app.controller.MembersListController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <children>
      <!-- HEADER ROW -->
      <HBox alignment="CENTER_LEFT" spacing="10.0">
         <children>
            <Label text="People" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="28.0" />
               </font>
            </Label>
            
            <!-- Flexible Space -->
            <Region HBox.hgrow="ALWAYS" />
            
            <!-- Actions -->
            <Button mnemonicParsing="false" onAction="#handleAssignPlan" style="-fx-background-color: #00e676; -fx-text-fill: black;" text="Assign Plan" />
            <Button mnemonicParsing="false" onAction="#handleAddMember" style="-fx-background-color: #29b6f6; -fx-text-fill: white;" text="+" />
         </children>
      </HBox>
      
      <!-- MEMBERS GRID / LIST -->
      <ListView fx:id="membersListView" styleClass="edge-to-edge" VBox.vgrow="ALWAYS" />
      
   </children>
</VBox>
