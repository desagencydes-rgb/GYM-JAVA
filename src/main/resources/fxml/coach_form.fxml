<?xml version="1.0" encoding="UTF-8"?>

<!--
  Coach Form View
  - Simple form to Add/Edit a coach.
  - Fields: Name, Specialization, Phone.
-->

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="15.0" style="-fx-background-color: #1e1e1e; -fx-border-color: #333; -fx-border-width: 1;" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gym.app.controller.CoachFormController">
   <padding>
      <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
   </padding>
   <children>
      <Label text="Coach Details" textFill="WHITE">
         <font>
            <Font name="System Bold" size="20.0" />
         </font>
      </Label>
      <TextField fx:id="nameField" promptText="Full Name" />
      <TextField fx:id="specializationField" promptText="Specialization (e.g. Yoga)" />
      <TextField fx:id="phoneField" promptText="Phone Number" />
      <Button mnemonicParsing="false" onAction="#handleSave" prefWidth="200.0" style="-fx-background-color: #29b6f6; -fx-text-fill: white; -fx-font-weight: bold;" text="Save Coach" />
   </children>
</VBox>
